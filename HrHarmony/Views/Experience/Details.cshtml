@using HrHarmony.Models.ViewModels.Experience;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły doświadczenia zawodowego";
}

<h2 class="text-center">Szczegóły doświadczenia zawodowego</h2>

<table class="table table-bordered table-hover">

    <thead class="table-dark">
        <tr>
            <th>Opis doświadczenia</th>
            <th>Akcje</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>@Model.ExperienceDescription</td>

            <td>
                <a class="btn btn-info btn-sm" asp-controller="Experience" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
                <a class="btn btn-danger btn-sm" asp-controller="Experience" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
            </td>
        </tr>
    </tbody>
</table>

@if (Model.IsMainView)
{
    <a href="@Url.Action("Index")" class="btn btn-secondary text-left">Wróć</a>
}