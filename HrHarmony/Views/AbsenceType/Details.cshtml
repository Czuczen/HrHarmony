@using HrHarmony.Data.Models.ViewModels.AbsenceType;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły rodzaju absencji";
}

@if (Layout != null)
{
    <h2 class="text-center">Szczegóły rodzaju absencji</h2>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nazwa typu</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.TypeName</td>

                <td class="d-flex">
                    <a class="btn btn-info btn-sm ms-2" asp-controller="AbsenceType" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
                    <a class="btn btn-danger btn-sm ms-2" asp-controller="AbsenceType" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@if (Layout != null)
{
    @await Html.PartialAsync("~/Views/Shared/Records/_ComeBackButton.cshtml")
}