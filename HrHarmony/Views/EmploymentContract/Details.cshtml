@using HrHarmony.Data.Models.ViewModels.EmploymentContract;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły umowy pracownika";
}

@if (Layout != null)
{
    <h2 class="text-center">Szczegóły umowy pracownika</h2>

    @:<div class="table-responsive">
        @:<table class="table table-bordered table-hover">
            @:<thead class="table-dark">
                @await Html.PartialAsync("~/Views/EmploymentContract/_Columns.cshtml")
            @:</thead>
            @:<tbody>

}

<tr>
    <td>@Model.ContractNumber</td>
    <td>@Model.StartDate</td>
    <td>@Model.EndDate</td>
    <td>@Model.ContractType?.TypeName</td>
    <td>@Model.Employee?.FullName</td>
    <td>@Model.HourlyRate</td>
    <td>@Model.MonthlyRate</td>
    <td>@Model.BasicSalary</td>

    <td class="d-flex">
        <a class="btn btn-info btn-sm ms-2" asp-controller="EmploymentContract" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
        <a class="btn btn-danger btn-sm ms-2" asp-controller="EmploymentContract" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
    </td>
</tr>

@if (Layout != null)
{
    
            @:</tbody>
        @:</table>
    @:</div>

    @await Html.PartialAsync("~/Views/Shared/Records/_ComeBackButton.cshtml")
}
