@using HrHarmony.Data.Models.ViewModels.ContractType;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły typu umowy";
}

@if (Layout != null)
{
    <h2 class="text-center">Szczegóły typu umowy</h2>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nazwa typu</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.TypeName</td>

                <td class="d-flex">
                    <a class="btn btn-info btn-sm ms-2" asp-controller="ContractType" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
                    <a class="btn btn-danger btn-sm ms-2" asp-controller="ContractType" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@if (Layout != null)
{
    @await Html.PartialAsync("~/Views/Shared/Records/_ComeBackButton.cshtml")

    <div class="text-center mt-3">
        <button class="btn btn-primary m-1 w-100" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseContracts" aria-expanded="false" aria-controls="multiCollapseContracts">Umowy</button>
    </div>
    <div class="row">
        <div class="col">
            <div class="collapse" id="multiCollapseContracts">
                <div class="card card-body">
                    <h2 class="text-center">Szczegóły umów</h2>
                    @foreach (var contract in Model.Contracts)
                    {
                        @await Html.PartialAsync("~/Views/EmploymentContract/Details.cshtml", contract)
                    }
                </div>
            </div>
        </div>
    </div>
}