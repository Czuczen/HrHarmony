@model HrHarmony.Models.ViewModels.Logges.LogsViewModel

@{
    ViewData["Title"] = "Logi";
}

@if (Model.HasPermission)
{
    <div class="accordion" id="logsAccordion">

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTrace">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTrace" aria-expanded="false" aria-controls="collapseTrace">
                    Trace
                </button>
            </h2>
            <div id="collapseTrace" class="accordion-collapse collapse" aria-labelledby="headingTrace" data-bs-parent="#logsAccordion">
                <div class="accordion-body">
                    @await Html.PartialAsync("_Logs", Model.TraceLogs)
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingDebug">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDebug" aria-expanded="false" aria-controls="collapseDebug">
                    Debug
                </button>
            </h2>
            <div id="collapseDebug" class="accordion-collapse collapse" aria-labelledby="headingDebug" data-bs-parent="#logsAccordion">
                <div class="accordion-body">
                    @await Html.PartialAsync("_Logs", Model.DebugLogs)
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingInfo">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInfo" aria-expanded="false" aria-controls="collapseInfo">
                    Info
