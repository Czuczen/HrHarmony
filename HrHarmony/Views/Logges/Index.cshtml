        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingCritical">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCritical" aria-expanded="false" aria-controls="collapseCritical">
                    Critical
                </button>
            </h2>
            <div id="collapseCritical" class="accordion-collapse collapse" aria-labelledby="headingCritical" data-bs-parent="#logsAccordion">
                <div class="accordion-body">
                    @await Html.PartialAsync("_Logs", Model.CriticalLogs)
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingNone">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNone" aria-expanded="false" aria-controls="collapseNone">
