                    @await Html.PartialAsync("_Logs", Model.InfoLogs)
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingWarn">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWarn" aria-expanded="false" aria-controls="collapseWarn">
                    Warn
                </button>
            </h2>
            <div id="collapseWarn" class="accordion-collapse collapse" aria-labelledby="headingWarn" data-bs-parent="#logsAccordion">
                <div class="accordion-body">
