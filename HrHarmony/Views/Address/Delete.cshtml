@using HrHarmony.Models.ViewModels.Address;
@model DeleteViewModel

@{
    ViewData["Title"] = "Usuń adres";
}

<h2>Usunąć adres - @Model.Street?</h2>

<form asp-controller="Address" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    @await Html.PartialAsync("_DeleteFormButtons")
</form>