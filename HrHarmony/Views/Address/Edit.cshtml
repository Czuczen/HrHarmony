@using HrHarmony.Models.ViewModels.Address;
@model UpdateViewModel

@{
    ViewData["Title"] = "Edycja adresu";
}

<h2>Edytuj adres</h2>

@using (Html.BeginForm("Edit", "Address", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Street)
        @Html.TextBoxFor(model => model.Street, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.City)
        @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PostalCode)
        @Html.TextBoxFor(model => model.PostalCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
    </div>

    @await Html.PartialAsync("~/Views/Shared/Records/_FormButtons.cshtml")
}
