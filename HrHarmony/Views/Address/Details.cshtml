@using HrHarmony.Models.ViewModels.Address;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły adresu";
}

<h2 class="text-center">Szczegóły adresu</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Ulica</th>
            <th>Miasto</th>
            <th>Kod pocztowy</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Street</td>
            <td>@Model.City</td>
            <td>@Model.PostalCode</td>
            <td>
                <a class="btn btn-info btn-sm" asp-controller="Address" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
                <a class="btn btn-danger btn-sm" asp-controller="Address" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
            </td>
        </tr>
    </tbody>
</table>

@if (Model.IsMainView)
{
    <a href="javascript: history.go(-1)" class="btn btn-secondary text-left">Wróć</a>
}