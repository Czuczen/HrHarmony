@using HrHarmony.Data.Models.ViewModels.Address;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły adresu";
}

@if (Layout != null)
{
    <h2 class="text-center">Szczegóły adresu</h2>    
}

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ulica</th>
                <th>Miasto</th>
                <th>Kod pocztowy</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Street</td>
                <td>@Model.City</td>
                <td>@Model.PostalCode</td>

                <td class="d-flex">
                    <a class="btn btn-info btn-sm ms-2" asp-controller="Address" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
                    <a class="btn btn-danger btn-sm ms-2" asp-controller="Address" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@if (Layout != null)
{
    @await Html.PartialAsync("~/Views/Shared/Records/_ComeBackButton.cshtml")
}