@using HrHarmony.Models.ViewModels.Salary;
@model UpdateViewModel

@{
    ViewData["Title"] = "Edycja wynagrodzenia";
}

<h2>Edytuj wynagrodzenie</h2>

@using (Html.BeginForm("Edit", "Salary", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.BasicSalary)
        @Html.TextBoxFor(model => model.BasicSalary, new { @class = "form-control", @min = "0", @step = "0.01" })
        @Html.ValidationMessageFor(model => model.BasicSalary, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AdditionalSalary)
        @Html.TextBoxFor(model => model.AdditionalSalary, new { @class = "form-control", @min = "0", @step = "0.01" })
        @Html.ValidationMessageFor(model => model.AdditionalSalary, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Bonuses)
        @Html.TextBoxFor(model => model.Bonuses, new { @class = "form-control", @min = "0", @step = "0.01" })
        @Html.ValidationMessageFor(model => model.Bonuses, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Allowances)
        @Html.TextBoxFor(model => model.Allowances, new { @class = "form-control", @min = "0", @step = "0.01" })
        @Html.ValidationMessageFor(model => model.Allowances, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ZUSContributions)
        @Html.TextBoxFor(model => model.ZUSContributions, new { @class = "form-control", @min = "0", @step = "0.01" })
        @Html.ValidationMessageFor(model => model.ZUSContributions, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IncomeTax)
        @Html.TextBoxFor(model => model.IncomeTax, new { @class = "form-control", @min = "0", @step = "0.01" })
        @Html.ValidationMessageFor(model => model.IncomeTax, "", new { @class = "text-danger" })
    </div>

    @await Html.PartialAsync("~/Views/Shared/Records/_FormButtons.cshtml")
}