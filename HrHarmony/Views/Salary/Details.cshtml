@using HrHarmony.Data.Models.ViewModels.Salary;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły wynagrodzenia";
}

@if (Layout != null)
{
    <h2 class="text-center">Szczegóły wynagrodzenia</h2>

    @:<div class="table-responsive">
        @:<table class="table table-bordered table-hover">
            @:<thead class="table-dark">
                @await Html.PartialAsync("~/Views/Salary/_Columns.cshtml")
            @:</thead>
            @:<tbody>
}

<tr>
    <td>@Model.PaymentDate.ToShortDateString()</td>
    <td>@Model.Employee?.FullName</td>
    <td>@Model.BasicSalary</td>
    <td>@Model.AdditionalSalary</td>
    <td>@Model.Bonuses</td>
    <td>@Model.Allowances</td>
    <td>@Model.ZUSContributions</td>
    <td>@Model.IncomeTax</td>

    <td class="d-flex">
        <a class="btn btn-info btn-sm ms-2" asp-controller="Salary" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
        <a class="btn btn-danger btn-sm ms-2" asp-controller="Salary" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
    </td>
</tr>

@if (Layout != null)
{
            @:</tbody>
        @:</table>
    @:</div>

    @await Html.PartialAsync("~/Views/Shared/Records/_ComeBackButton.cshtml")
}