@using HrHarmony.Data.Models.ViewModels.Leave;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły urlopu";
}

@if (Layout != null)
{
    <h2 class="text-center">Szczegóły urlopu</h2>

    @:<div class="table-responsive">
        @:<table class="table table-bordered table-hover">
            @:<thead class="table-dark">
                @await Html.PartialAsync("~/Views/Leave/_Columns.cshtml")
            @:</thead>
            @:<tbody>
}

<tr>
    <td>@Model.StartDate</td>
    <td>@Model.EndDate</td>
    <td>@Model.LeaveType?.TypeName</td>
    <td>@Model.Employee?.FullName</td>

    <td class="d-flex">
        <a class="btn btn-info btn-sm ms-2" asp-controller="Leave" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
        <a class="btn btn-danger btn-sm ms-2" asp-controller="Leave" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
    </td>
</tr>

@if (Layout != null)
{
            @:</tbody>
        @:</table>
    @:</div>

    @await Html.PartialAsync("~/Views/Shared/Records/_ComeBackButton.cshtml")
}