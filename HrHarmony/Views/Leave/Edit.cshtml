@using HrHarmony.Models.ViewModels.Leave;
@model UpdateViewModel

@{
    ViewData["Title"] = "Edycja urlopu";
}

<h2>Edytuj urlop</h2>

@using (Html.BeginForm("Edit", "Leave", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
    </div>

    @await Html.PartialAsync("_FormButtons")
}