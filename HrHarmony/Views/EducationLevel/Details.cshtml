@using HrHarmony.Models.ViewModels.EducationLevel;
@model DetailsViewModel

@{
    ViewData["Title"] = "Szczegóły poziomu wykształcenia";
}

@if (Layout != null)
{
    <h2 class="text-center">Szczegóły poziomu wykształcenia</h2>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nazwa poziomu</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.LevelName</td>

                <td class="d-flex">
                    <a class="btn btn-info btn-sm ms-2" asp-controller="EducationLevel" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
                    <a class="btn btn-danger btn-sm ms-2" asp-controller="EducationLevel" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@if (Layout != null)
{
    @await Html.PartialAsync("~/Views/Shared/Records/_ComeBackButton.cshtml")
}

<div class="text-center mt-3">
    <button class="btn btn-primary m-1 w-100" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseEmployees" aria-expanded="false" aria-controls="multiCollapseEmployees">Pracownicy</button>
</div>

<div class="row">
    <div class="col">
        <div class="collapse" id="multiCollapseEmployees">
            <div class="card card-body">
                <h2 class="text-center">Szczegóły pracowników</h2>
                @foreach (var employee in Model.Employees)
                {
                    @await Html.PartialAsync("~/Views/Employee/Details.cshtml", employee)
                }
            </div>
        </div>
    </div>
</div>